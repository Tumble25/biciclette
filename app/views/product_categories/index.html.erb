<div class="dashboard-container">
  <div class="dashboard-products-container">
    <div class="product-category-box">
  <div class="new-product-category-container">
    <%= link_to new_product_category_path do  %>
    <i class="far fa-plus-square fa-5x"></i>
    <p></p>
    Voeg categorie toe
    <% end %>
  </div>
  </div>
  </div>

  <div class="dashboard-products-container">
    <% @product_categories.each do |category| %>
    <div class="product-category-box">
      <%= link_to edit_product_category_path(category) do  %>
      <div class="product-category-card">
        <% if !category.photo.attachment.nil? %>
        <%= cl_image_tag category.photo.key, height: 300, width: 400, crop: :fill, class:"card-item" %>
        <% else %>
          <div class="no-product-category-image">
            <i class="fas fa-exclamation-triangle fa-5x"></i>
            <p></p>
            <p> Geen foto </p>
          </div>
        <% end %>
        <% end %>
        <!-- <br> -->
        <div class="dashboard-categorie-opties">

        <p> <%= category.naam %></p>
            <%= link_to product_category_path(category),
            method: :delete,
            data: {confirm: t('.delete_confirm')} do %>
                <p class=verwijder>verwijder</p>
            <% end %>
        </div>
      </div>
      <%# end %>
    </div>
    <% end %>
  </div>
</div>
