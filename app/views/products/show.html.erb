<div class="banner-container-product"></div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% number = 0 %>
    <% @product.product_photos.each do |pic| %>
    <% if number == 0 %>
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <% number += 1 %>
      <% else %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= number %>"></li>
      <% number += 1 %>
    <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <% count = 0 %>
    <% @product.product_photos.each do |photo| %>
    <% if count == 0 %>
      <div class="carousel-item active">
         <%= cl_image_tag photo.photo ,class: "d-block img-fluid" %>
        <!-- <img class="d-block img-fluid" src="..." alt="First slide"> -->
      </div>
      <% count += 1 %>
      <% else %>
      <div class="carousel-item">
         <%= cl_image_tag photo.photo ,class: "d-block img-fluid" %>
        <!-- <img class="d-block img-fluid" src="..." alt="First slide"> -->
      </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

